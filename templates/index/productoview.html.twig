{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block stylesheets %}
        {{parent()}}
        <link rel="stylesheet" href="{{asset('assets/styles/productoView.css')}}">
{% endblock %}

{% block javascripts %}
        {{parent()}}
        <script src="{{asset('assets/js/productoView.js')}}" defer></script>
{% endblock %}

{% block body %}
{% if producto %}

        <div class="border-bottom" style="padding-bottom: 10px; margin-bottom: 15px; margin-top: 30px;">
                <span class="h1" style="margin-bottom: 30px;">{{ producto.nombre }}</span>
                <span style="margin: 100px;">(Referencia: {{producto.id}})</span>
        </div>

        <div class="row" style="border-bottom: 1px solid #e1e1e1; padding-bottom: 15px;">
                <div class="col-md-3">
                        {% include 'index/easyCarousel.html.twig' with {'fotos': producto.fotos} %} 
                </div>
                <div class="col-md-8">
                        <ul class="list-group">
                                <li class="list-group-item">
                                        <div style="float: left;">
                                                <p class="carteles_producto_texto">Precio:</p>
                                                <p class='h4 _32_05_€'>{{ producto.preciounidad + 20 }}.00 $</p>
                                                <p class='precio h2'>{{ producto.preciounidad }}.00 $</p>
                                        </div> 
                                        <div style="float: right;"><img src="{{ asset('exact_images/redes_sociales.png') }}"></div>
                                </li>
                                <li class="list-group-item">
                                        <div style="float: left;">
                                                <span class="carteles_producto_texto">Elige tu inicial</span>
                                                <img src="{{ asset('exact_images/help.png') }}">
                                                <select>
                                                        {% for x in 'A'..'Z' %}
                                                        <option>{{x}}</option>
                                                        {% endfor %}
                                                </select>
                                        </div>
                                        <div class="calificacion" style="float: right;">
                                                <p class="carteles_producto_texto">Calificación:</p>
                                                {% for i in 1..5 %}
                                                        <figure>
                                                                <img class="gris_star" style="display: inline;" data-index="{{i}}" src="{{ asset('exact_images/estrella_gris.png') }}">
                                                                <img class="orange_star" style="display: none;" data-index="{{i}}" src="{{ asset('exact_images/estrella_naranja.png') }}">
                                                        </figure>
                                                {% endfor %}
                                        </div>
                                </li>
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}                
                                <li class="list-group-item" id="formulario">
                                        {{ form_start(form, {'method': 'post'}) }}
                                        <span class="carteles_producto_texto">Cantidad:</span>  
                                        {{ form_widget(form.cantidad, {
                                                'attr': 
                                                {
                                                        'min': 1,
                                                        'name': form.cantidad.vars.name,
                                                        'id': form.cantidad.vars.id,
                                                        'class': 'form_control',
                                                        'style': "
                                                        margin: 10px;
                                                        width: 60px;
                                                        display: inline;"
                                                },
                                                'type': 'number'
                                        })}}
                                        <button type="submit" id="form_agregar" name="form[agregar]" 
                                        class="btn btn-lg btn agregar_al_carrito_boton" 
                                        style="margin: 10px; display: inline;">
                                        <span class="agregar_al_carrito_texto">Agregar al carrito <img src="{{ asset('exact_images/flecha_boton.png') }}"></span> <img src="{{ asset('exact_images/carrito.png') }}"></button>
                                        {{ form_widget(form.agregar, {
                                                'attr': 
                                                        {
                                                                'class': 'btn btn-lg btn-warning',
                                                                'style': "margin: 10px; width: 50%; display: none;"
                                                        },
                                                'label': 'Agregar al carrito <i class="fa fa-shopping-cart"></i>'
                                        }) }}
                                        {{ form_widget(form.calificacion, {
                                                'attr': {'style': 'display: none;'}, 
                                                'type': 'number'}) }}
                                {{ form_end(form) }}
                                </li>
                                {% endif %}
                                <li class="list-group-item">
                                        <div class="container border" style="width: 63%;">
                                                <p id="encabezado_texto">
                                                        Descuentos para compras de más de 1 unidad</p>
                                                <table id="descuentos">
                                                        
                                                        <thead>
                                                                <tr>
                                                                        <th class="descuentos_header_texto">Cantidad</th>
                                                                        <th class="descuentos_header_texto">Precio</th>
                                                                </tr>
                                                        </thead>
                                                        <tbody>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                                <tr><td>2</td><td>12.8 $</td></tr>
                                                        </tbody>
                                                        </table>
                                        </div>
                                        
                                        </li>
                                        <li class="list-group-item">
                                                <p class="descripcion descripcion_texto">{{ producto.descripcion }}</p>
                                        </li>
                        </ul>
                </div>
                <div style="float: left; padding-left: 10px;">
                        <span><span style="font-weight:500; color: #ff8038;">0</span> Comentarios</span>
                        <span style="border-right: 2px solid black; width: 1px; margin-left: 10px; margin-right: 10px;"></span>
                        <span><img src="{{ asset('exact_images/lapiz.png') }}"> Comentar</span>
                        <span style="border-right: 2px solid black; width: 1px; margin-left: 10px; margin-right: 10px;"></span>
                        <span><img src="{{ asset('exact_images/comentario.png') }}"> Recomendar</span>
                </div>
        </div>

        <div class="container" style="padding-left: 0px !important; padding-bottom: 20px !important;">
                <p id="Productos_similares">Productos similares</p>
                <table class="similares_table">
                        <tbody>
                                {% set colores = ['brown', 'khaki', 'red', 'blue', 'green'] %}
                                <tr>
                                {#
                                        {% for color in colores %}
                                        <td>
                                                <div class="similares_box" style="color: {{color}};"></div>
                                                <p>Reloj Orient B-678542-D Cro. Acero 200m</p>
                                                <p class="precio h3">0000.0 $</p>
                                        </td>
                                        {% endfor %}
                                #}
                                

                                {% for i in 1..5 %}
                                <td>
                                        <img src="{{ asset('exact_images/Layer_7.png') }}">
                                </td>
                                {% endfor %}
                                </tr>
                        </tbody>
                </table>
        </div>


{% else %}
        <h2>Ese producto no existe.</h2>
{% endif %}
{% endblock %}